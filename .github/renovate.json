{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nils-org/renovate-config:minimal"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "cake.tool",
        "Microsoft.Extensions.DependencyInjection"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "Microsoft.Extensions.DependencyInjection"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "Breaking Change"
      ]
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "labels": [
        "Breaking Change"
      ],
      "matchPackageNames": [
        "/^Spectre\\.Console\\..*/"
      ]
    }
  ]
}
